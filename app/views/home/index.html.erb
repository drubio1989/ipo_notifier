<form class="w-max" onSubmit={handleSubmit(onSubmit)}>
  <div class="flex items-center flex-col">
    {errors.email && (
    <span class='font-mono leading-tight w-full text-red-500 mb-2' >
      {errors.email.message}
    </span>
    )}
    <div class="w-full">
      <div class={(`border border-teal-400 rounded py-5 px-4`)}>
        <h4 class={(`font-mono text-sm uppercase text-gray-500 mb-3`)}>Subscribe to the newsletter</h4>
        <input data-lpignore="true"
         class="rounded-md border border-gray-300 bg-gray-100 min-w-0 rounded text-gray-800 py-2 px-3 mr-2"
         placeholder="Enter your email"
         {...register('email', { 
           required: "Email is required", 
           pattern: {
             value: /^[\w-]+(\.[\w-]+)*@[\w-]+(\.[\w-]+)+$/,
             message: 'Invalid email address',
           }    
         })}
         aria-invalid={errors.email ? "true" : "false"}
       />
        <input 
         class="
           flex-shrink-0 
           bg-teal-500 
           hover:bg-teal-700 
           border-teal-500 
           hover:border-teal-700 
           text-sm border-4 
           text-white 
           py-1 
           px-2 
           rounded ml-auto
         " 
         type='submit'
         value='Subscribe'
       />
      </div>
    </div>
  </div>
</form>
<hr class="border-teal-400"/>
<section class="lg:py-10">
  <div class="max-w-6xl mx-auto p-4 sm:p-6 lg:p-8 bg-white">
    <div class="text-center">
      <h2 class="text-base text-teal-600 font-semibold tracking-wide uppercase">Features</h2>
      <p class="mt-2 text-5xl lg:text-7xl font-bold tracking-tight text-teal-600">
        How It Works
      </p>
    </div>
    <div class="flex flex-wrap my-12">
      {listItems.map((item, index) => (
      <div class="w-full border-b border-t md:w-1/2  lg:w-1/3 p-8"  key={index}>
        <div class="px-4">
          <span
                     class="flex w-16 h-16 mx-auto items-center
                       justify-center text-2xl font-bold rounded-full
                       bg-teal-100 text-teal-500"
                   >
            {index + 1}
          </span>
        </div>
        <div class="flex items-center mb-6 mt-7">
          <div class="font-mono ml-4 text-xl text-center w-full">{item.title}</div>
        </div>
        <p class="leading-loose text-gray-500 font-mono text-center">
          {item.description}
        </p>
      </div>
      ))}
    </div>
    <div class="flex flex-wrap -mx-8 items-center">
      <div class="w-full px-8">
        <div class="lg:mb-12 lg:mb-0 pb-12 lg:pb-0 mt-16 lg:mt-0 mx-6 lg:mx-0">
          <div class="container mx-auto p-4 overflow-x-auto">
            <table
                     class="
                       w-full 
                       bg-white 
                       border 
                       border-gray-300
                       max-w-[2520px] 
                       mx-auto 
                       xl:px-20 
                       md:px-10 
                       sm:px-2
                       px-4"
                   >
              <thead>
                <tr class="bg-teal-500 border-b border-gray-300">
                  <th class="py-2 px-4 text-white font-mono">Company</th>
                  <th class="py-2 px-4 text-white font-mono">Symbol</th>
                  <th class="py-2 px-4 text-white font-mono">Estimated Volume</th>
                  <th class="py-2 px-4 text-white font-mono">Expected To Trade</th>
                  <th class="py-2 px-4 text-white font-mono">Lead Managers</th>
                  <th class="py-2 px-4 text-white font-mono">Number of Shares</th>
                  <th class="py-2 px-4 text-white font-mono">Price High</th>
                  <th class="py-2 px-4 text-white font-mono">Price Low</th>
                </tr>
              </thead>
              <Suspense fallback={<Loader />}>
              <tbody>
                {ipoData.map((company, index) => (
                <tr class="even:bg-teal-100 odd:bg-white dark:even:bg-teal-100" key={index}>
                  <td class="py-2 px-4 ">{company.Company}</td>
                  <td class="py-2 px-4">{company.Symbol}</td>
                  <td class="py-2 px-4">{company.EstimatedVolume}</td>
                  <td class="py-2 px-4">{new Date(company.ExpectedToTrade).toLocaleDateString()}</td>
                  <td class="py-2 px-4">{company.LeadManagers}</td>
                  <td class="py-2 px-4">{company.NoOfShares} mil</td>
                  <td class="py-2 px-4">${company.PriceHigh}</td>
                  <td class="py-2 px-4">${company.PriceLow}</td>
                </tr>
                ))
                }
              </tbody>
            </Suspense>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</section>
